{% extends 'base-admin.html.twig' %}

{% block title %}Evenements{% endblock %}

{% block body %}
    <h1>Evenement</h1>
    <div class="row">
        <div class="card card-add">
            <a href="{{ path('addEvent') }}"><img src="{{ asset('img/icon/add.png') }}" class="card-add-img"/></a>
        </div>
        {% for event in events %}
            <div class="card card-basic">
                <h2>{{ event.title }}</h2>
                <a href="{{ path('deleteEvent', {'id':event.id}) }}" id="delete-event" class="btn btn-danger"><img src="{{ asset('img/icon/remove.png') }}" class="icon"/>Suppression</a>
                <a href="{{ path('editEvent', {'id':event.id}) }}" id="edit-event" class="btn btn-info"><img src="{{ asset('img/icon/valid.png') }}" class="icon"/>Edition</a>
            </div>
        {% endfor %}
    </div>
{% endblock %}
