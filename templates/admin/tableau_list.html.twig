{% extends 'base-admin.html.twig' %}

{% block title %}AdminController{% endblock %}

{% block body %}
    <h1>Tableau des Formations</h1>
    <div class="row">

        <div class="card card-add">
            <a href="{{ path('tableau_add') }}"><img src="{{ asset('img/icon/add.png') }}" class="card-add-img"/></a>
        </div>

        {% for ligne in tableau %}
            <div class="card card-basic d-flex flex-column p-2">
                <h4 class="text-center mt-3 mb-4">{{ ligne.diplome|slice(0, 30) }} ...</h4>
                <a href="{{ path('tableau_delete', {'id': ligne.id}) }}" id="delete-event" class="btn btn-danger btn-block"><img src="{{ asset('img/icon/remove.png') }}" class="icon"/>Supprimer</a>
                <a href="{{ path('tableau_edit', {'id': ligne.id}) }}" id="edit-event" class="btn btn-info btn-block"><img src="{{ asset('img/icon/valid.png') }}" class="icon"/>Editer</a>
            </div>
        {% endfor %}
    </div>

{% endblock %}
