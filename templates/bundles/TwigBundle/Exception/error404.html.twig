{% set page = 'error' %}
{% extends 'base.html.twig' %}

{% block title %}Erreur 404 : Page Introuvable{% endblock %}
{% block body %}
    <div class="col-md-12">
        <div class="row justify-content-center">
            <div class="col text-center">
                <h1 class="display-1" style="color: #e9453c;">Erreur 404</h1>
            </div>
        </div>
    </div>

    <div class="col-md-12">
        <div class="row justify-content-center">
            <div class="col text-center">
                <a href="{{ path("index") }}">

                    <p class="alert alert-danger">
                        <span class="glyphicon glyphicon-remove"></span>
                        La page que vous recherchez n'existe pas. Cliquez ici pour retourner sur la page d'accueil.
                    </p>
                </a>

            </div>
        </div>
    </div>
{% endblock %}
