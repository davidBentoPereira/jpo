{% extends 'front/base.html.twig' %}

{% block title %}Fili√®re{% endblock %}

{% block body %}

    <div class="mx-3 px-3">

        <div class="row justify-content-center text-justify">

            <div class="card col-12 shadow p-3 m-3 hvr-underline-from-center">
                <div class="card-body">
                    <h1 class="card-title text-center h3">{{ filiere.title }}</h1>
                    <p class="card-text"><em>{{ filiere.candidate }}</em></p>
                    <p class="card-text">{{ filiere.description|raw }}</p>
                </div>
            </div>

        </div>

        <div class="row justify-content-around text-justify mt-4">

            <div class="card-deck">

                {% if filiere.textBlock1 is defined and filiere.textBlock1 is not empty %}
                <div class="card">
                    <div class="row mt-2 justify-content-center">
                        <div><img src="{{ asset('img/icon/settings.svg') }}" alt="" class="mx-auto" width="50px"></div>
                    </div>
                    <div class="card-body">
                        <h2 class="card-title text-center h4">{{ filiere.titleBlock1 }}</h2>
                        <p class="card-text">{{ filiere.textBlock1|raw }}</p>
                    </div>
                </div>
                {% endif %}

                {% if filiere.titleBlock2 is defined and filiere.titleBlock2 is not empty %}
                <div class="card">
                    <div class="row mt-2 justify-content-center">
                        <div><img src="{{ asset('img/icon/handyman-tools.png') }}" alt="" class="mx-auto" width="50px"></div>
                    </div>
                    <div class="card-body">
                        <h2 class="card-title text-center h4">{{ filiere.titleBlock2 }}</h2>
                        <p class="card-text">{{ filiere.textBlock2|raw }}</p>
                    </div>
                </div>
                {% endif %}

                {% if filiere.titleBlock3 is defined and filiere.titleBlock3 is not empty %}
                    <div class="card">
                        <div class="row mt-2 justify-content-center">
                            <div><img src="{{ asset('img/icon/university-lecture.svg') }}" alt="" class="mx-auto" width="50px"></div>
                        </div>
                        <div class="card-body">
                            <h2 class="card-title text-center h4">{{ filiere.titleBlock3 }}</h2>
                            <p class="card-text">{{ filiere.textBlock3|raw }}</p>
                        </div>
                    </div>
                {% endif %}

            </div>
        </div>




        <div class="row justify-content-around text-justify mt-4">

            <div class="card-deck">

                {% if  filiere.titleBlock4 is defined and filiere.titleBlock4 is not empty %}
                    <div class="card col-lg-6">
                        <div class="row mt-2 justify-content-center">
                            <div><img src="{{ asset('img/icon/business-person.svg') }}" alt="" class="mx-auto" width="50px"></div>
                        </div>
                        <div class="card-body">
                            <h2 class="card-title text-center h4">{{ filiere.titleBlock4 }}</h2>
                            <p class="card-text">{{ filiere.textBlock4|raw }}</p>
                        </div>
                    </div>
                {% endif %}

                {% if filiere.titleBlock5 is defined and filiere.titleBlock5 is not empty %}
                    <div class="card col-lg-6">
                        <div class="row mt-2 justify-content-center">
                            <div><img src="{{ asset('img/icon/study.svg') }}" alt="" class="mx-auto" width="50px"></div>
                        </div>
                        <div class="card-body">
                            <h2 class="card-title text-center h4">{{ filiere.titleBlock5 }}</h2>
                            <p class="card-text">{{ filiere.textBlock5|raw }}</p>
                        </div>
                    </div>
                {% endif %}

            </div>

        </div>

        <div class="row justify-content-around text-justify mt-4">

            <div class="card-deck">

                {% if filiere.video is defined and filiere.video is not empty %}
                    <div class="card">
                        <div class="card-body">
                            {{ filiere.video|raw }}
                        </div>
                    </div>
                {% endif %}

            </div>

        </div>



    </div>

{% endblock %}
