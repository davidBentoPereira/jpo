{% extends 'front/base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
    <div class="container mt-4 mb-4" id="mlds">

        <div class="card mt-3 mb-3">
            <div class="row no-gutters">
                <div class="col-md-4">
                    <img src="{{ asset('img/girl-reading-book.jpg') }}" class="card-img" alt="...">
                </div>
                <div class="col-md-8 hvr-underline-from-left">
                    <div class="card-body">
                        <h5 class="card-title">Nos formations</h5>
                        <p class="card-text">Découvrez les formations dispensés au Lycée Marcelle Pardé</p>
