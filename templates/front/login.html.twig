{% extends 'front/base.html.twig' %}

{% block title %}Connexion à l'espace administrateur!{% endblock %}

{% block body %}
    <div class="container" id="main-content">
        <h1 class="modal-title" id="exampleModalLabel" style="text-align: center">Connexion à l'espace d'administration</h1>
            {% if messages|length > 0 %}
                {% for message in messages %}
                    <div class="alert alert-{{ message['class'] }}" role="alert">
                        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                        {{ message['content'] }}
                    </div>
                {% endfor %}
            {% endif %}
        <div class="col-8"  style="margin: auto">
            <form action="{{ path('login') }}" method="POST">
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><i class="fas fa-user"></i></span>
                    </div>
                    <input type="email" class="form-control" name="email" placeholder="Mail" required="required">
                </div>
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><i class="fas fa-key"></i></span>
                    </div>
                    <input type="password" class="form-control" name="password" placeholder="Mot de passe" required="required">
                </div>
                <div class="form-group text-center">
                    <button type="submit" class="btn btn-outline-secondary btn-block"><i class="fas fa-sign-in-alt"></i> Se connecter</button>
                </div>
            </form>
        </div>
    </div>
{% endblock %}